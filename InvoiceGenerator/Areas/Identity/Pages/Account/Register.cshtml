@page
@model RegisterModel

<div class="registration-container">
    <div class="form-card">
        <div class="form-header">
            <div class="brand-icon">
                <i class="bi bi-pentagon-half"></i>
            </div>
            <h3>Create Account</h3>
            <p class="text-muted">Join our platform to get started</p>
        </div>

        <form id="registerForm" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

            <div class="form-group">
                <div class="input-wrapper">
                    <div class="input-icon">
                        <i class="bi bi-envelope"></i>
                    </div>
                    <div class="input-field">
                        <input  autocomplete="username" aria-required="true"
                               placeholder=" " asp-for=Input.Email/>
                        <label>Business Email</label>
                    </div>
                </div>
                <span class="error-message"></span>
            </div>

            <div class="form-group">
                <div class="input-wrapper">
                    <div class="input-icon">
                        <i class="bi bi-lock"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" autocomplete="new-password"
                               aria-required="true" placeholder=" " asp-for=Input.Password />
                        <label >Password</label>
                    </div>
                    <button type="button" class="toggle-password" tabindex="-1">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <span  class="error-message"></span>
            </div>

            <div class="form-group">
                <div class="input-wrapper">
                    <div class="input-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                    <div class="input-field">
                        <input  type="password" autocomplete="new-password"
                               aria-required="true" placeholder=" " asp-for=Input.ConfirmPassword />
                        <label >Confirm Password</label>
                    </div>
                </div>
                <span class="error-message"></span>
            </div>

            <div class="form-footer">
                <button id="registerSubmit" type="submit" class="btn-submit">
                    <span>Create Account</span>
                    <i class="bi bi-arrow-right"></i>
                </button>

                <div class="login-link">
                    <span>Already have an account?</span>
                    <a asp-area="Identity" asp-page="/Account/Login">Sign in</a>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    :root {
        --primary-color: #2563eb;
        --primary-hover: #1d4ed8;
        --error-color: #dc2626;
        --text-primary: #334155;
        --text-secondary: #64748b;
        --border-color: #e2e8f0;
        --bg-color: #f8fafc;
        --card-bg: #ffffff;
        --input-bg: #f1f5f9;
        --input-focus: #f8fafc;
        --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --transition: all 0.3s ease;
    }

    .registration-container {
        display: flex;
        justify-content: center;
        padding: 3rem 1rem;
        background-color: var(--bg-color);
        min-height: 80vh;
    }

    .form-card {
        width: 100%;
        max-width: 440px;
        background-color: var(--card-bg);
        border-radius: 0.75rem;
        box-shadow: var(--shadow-md);
        overflow: hidden;
        padding: 2.5rem;
    }

    .form-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .brand-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 4rem;
        height: 4rem;
        border-radius: 0.5rem;
        background-color: var(--primary-color);
        color: white;
        margin-bottom: 1.5rem;
        transform: rotate(0deg);
        transition: var(--transition);
    }

        .brand-icon i {
            font-size: 1.75rem;
        }

    .form-card:hover .brand-icon {
        transform: rotate(15deg);
    }

    .form-header h3 {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .form-header p {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

    .validation-summary {
        margin-bottom: 1.5rem;
        padding: 0.75rem;
        border-radius: 0.375rem;
        background-color: rgba(220, 38, 38, 0.1);
        color: var(--error-color);
        font-size: 0.875rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .input-wrapper {
        display: flex;
        position: relative;
        height: 3.5rem;
        border-radius: 0.5rem;
        background-color: var(--input-bg);
        transition: var(--transition);
    }

        .input-wrapper:focus-within {
            background-color: var(--input-focus);
            box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.2);
        }

    .input-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3.5rem;
        color: var(--text-secondary);
    }

    .input-field {
        position: relative;
        flex: 1;
    }

        .input-field input {
            width: 100%;
            height: 100%;
            padding: 1.25rem 1rem 0.5rem;
            border: none;
            background: transparent;
            color: var(--text-primary);
            font-size: 1rem;
            outline: none;
        }

        .input-field label {
            position: absolute;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            color: var(--text-secondary);
            font-size: 1rem;
            transition: var(--transition);
            pointer-events: none;
        }

        .input-field input:focus + label,
        .input-field input:not(:placeholder-shown) + label {
            top: 0.75rem;
            transform: translateY(0);
            font-size: 0.75rem;
        }

    .toggle-password {
        position: absolute;
        right: 0;
        top: 0;
        height: 100%;
        width: 3.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        border: none;
        cursor: pointer;
        color: var(--text-secondary);
        transition: var(--transition);
    }

        .toggle-password:hover {
            color: var(--text-primary);
        }

    .error-message {
        display: block;
        margin-top: 0.5rem;
        color: var(--error-color);
        font-size: 0.75rem;
    }

    .btn-submit {
        width: 100%;
        padding: 0.875rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 0.5rem;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

        .btn-submit:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: var(--shadow-sm);
        }

        .btn-submit:active {
            transform: translateY(0);
        }

        .btn-submit i {
            transition: var(--transition);
        }

        .btn-submit:hover i {
            transform: translateX(4px);
        }

    .login-link {
        margin-top: 1.5rem;
        text-align: center;
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

        .login-link a {
            color: var(--primary-color);
            font-weight: 500;
            text-decoration: none;
            margin-left: 0.25rem;
            transition: var(--transition);
        }

            .login-link a:hover {
                color: var(--primary-hover);
                text-decoration: underline;
            }

    /* Animation keyframes */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .form-card {
        animation: fadeIn 0.5s ease forwards;
    }

    .form-group {
        opacity: 0;
        animation: fadeIn 0.5s ease forwards;
    }

        .form-group:nth-child(1) {
            animation-delay: 0.1s;
        }

        .form-group:nth-child(2) {
            animation-delay: 0.2s;
        }

        .form-group:nth-child(3) {
            animation-delay: 0.3s;
        }

    .form-footer {
        animation-delay: 0.4s;
    }

    /* Password toggle functionality */
    .toggle-password:focus {
        outline: none;
    }
</style>

<script>
    // Toggle password visibility
    document.addEventListener('DOMContentLoaded', function() {
      const toggleButtons = document.querySelectorAll('.toggle-password');
      toggleButtons.forEach(button => {
        button.addEventListener('click', function() {
          const input = this.previousElementSibling.querySelector('input');
          const icon = this.querySelector('i');

          if (input.type === 'password') {
            input.type = 'text';
            icon.classList.remove('bi-eye');
            icon.classList.add('bi-eye-slash');
          } else {
            input.type = 'password';
            icon.classList.remove('bi-eye-slash');
            icon.classList.add('bi-eye');
          }
        });
      });
    });
</script>