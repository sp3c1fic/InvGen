        // Remove line item
        function removeLineItem(lineItem) {
            lineItem.style.opacity = '0';
            lineItem.style.transform = 'translateX(10px)';
            lineItem.style.transition = 'opacity 0.3s ease, transform 0.3s ease';

            setTimeout(() => {
                lineItem.remove();
                calculateTotals();
            }, 300);
        }

        // Calculate totals
        function calculateTotals() {
            let subtotal = 0;
            let totalTax = 0;

            const lineItems = document.querySelectorAll('.line-item');
            lineItems.forEach(item => {
                const quantityInput = item.querySelector('.item-quantity input');
                const priceInput = item.querySelector('.item-unit-price input');
                const taxInput = item.querySelector('.item-tax input');
                const totalElement = item.querySelector('.line-total');

                const quantity = parseFloat(quantityInput.value) || 0;
                const price = parseFloat(priceInput.value) || 0;
                const taxRate = parseFloat(taxInput.value) || 0;

                const lineTotal = quantity * price;
                const lineTax = lineTotal * (taxRate / 100);

                subtotal += lineTotal;
                totalTax += lineTax;

                totalElement.textContent = '$' + lineTotal.toFixed(2);
            });

            const total = subtotal + totalTax;

            document.getElementById('subtotalAmount').textContent = '$' + subtotal.toFixed(2);
            document.getElementById('taxAmount').textContent = '$' + totalTax.toFixed(2);
            document.getElementById('totalAmount').textContent = '$' + total.toFixed(2);
        }

        // Setup input event listeners for all initial inputs
        document.querySelectorAll('.line-item input').forEach(input => {
            input.addEventListener('input', calculateTotals);
        });

        // Setup event listener for initial remove button
        document.querySelector('.remove-item-button').addEventListener('click', function () {
            const lineItem = this.closest('.line-item');
            removeLineItem(lineItem);
